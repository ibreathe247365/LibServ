<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Book entry</h1>
    <div class="col-6 offset-3">
        <form action="/books/<%=book._id%>?_method=PUT" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="book[title]"
                    value="<%=book.title %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="book[location]"
                    value="<%=book.location %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="book[image]"
                    value="<%=book.image %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <!-- Availability -->
         

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="book" name="book[description]"
                    required><%= book.description%></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update Entry</button>
            </div>
        </form>
        <a href="/books/<%= book._id%>">Back To Entries</a>

    </div>
</div>